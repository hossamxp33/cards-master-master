<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout"
        >

    <data>
        <import type="android.view.View"/>

        <variable
                name="Context"
                type="com.codesroots.mac.cards.presentaion.MainActivity"/>
        <variable
                name="listener"
                type="com.codesroots.mac.cards.presentaion.ClickHandler"/>
        <variable
                name="data"
                type="com.codesroots.mac.cards.models.ReportDaily"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/report_item"
            android:layoutAnimation="@anim/layout_animation"
            android:layoutDirection="rtl"
            android:padding="5dp">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.53" />
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.36" />

        <TextView
                android:id="@+id/mobile_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kokn"
                android:text="  رقم الهاتف : "
                android:textColor="@color/white"
                android:layout_marginRight="32dp"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvPreviousText"
                app:layout_constraintLeft_toRightOf="@+id/tvTotalPrice"
                app:layout_constraintRight_toRightOf="parent"

                />
        <TextView
                android:id="@+id/tvUnpaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@{data.opno}"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@+id/guid"
                app:layout_constraintTop_toBottomOf="@+id/guid_horizontal" />

        <TextView
                android:id="@+id/tvPreviousText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/kokn"
                android:paddingStart="1dp"
                android:paddingLeft="1dp"
                android:text="  رقم : "
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintLeft_toRightOf="@+id/tvTotalPrice"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTotalPrice"
                app:layout_constraintWidth_percent="0.22" />

        <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kokn"
                android:paddingStart="1dp"
                android:paddingLeft="1dp"
                android:text="@{data.amount}"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintRight_toLeftOf="@id/guid2"
                app:layout_constraintTop_toBottomOf="@+id/guid_horizontal"
                />

        <androidx.cardview.widget.CardView
                android:id="@+id/ivProfileP"
                android:layout_width="0dp"
                android:layout_height="75dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivProfilePe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:imageResourcee="@{data.logo}"
                    app:srcCompat="@drawable/img_load" />

        </androidx.cardview.widget.CardView>


        <TextView
                android:id="@+id/tvNameP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@{data.cardname}"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintRight_toLeftOf="@id/tvMessageC"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />


        <TextView
                android:id="@+id/tvMessageC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/kokn"
                android:paddingStart="1dp"
                android:paddingLeft="1dp"
                android:text="مبلغ : "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.15" />


        <TextView
                android:id="@+id/tvDateP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/kokn"
                android:gravity="bottom|start"
                android:textColor="@color/white"
                android:textDirection="ltr"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPreviousText"
                app:layout_constraintWidth_percent="0.3" />

        <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDateP"
                app:layout_constraintWidth_percent="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>